---
import Section from '@/components/cv/Section.astro';

import { education } from '@/cv';
---

<Section title="EducaciÃ³n">
  <ul class="flex flex-col gap-8">
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : 'Actual';
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header class="mb-1 flex items-start justify-between">
                <div>
                  <h3 class="font-medium text-neutral-950">{institution}</h3>
                </div>

                <time class="min-w-24 text-sm text-neutral-600 [@media(width<=700px)]:text-right">
                  {years}
                </time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
