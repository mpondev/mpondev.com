---
import Section from '@/components/cv/Section.astro';

import { languages } from 'cv-es.json';
---

<Section title="Idiomas">
  <ul class="flex justify-between">
    {
      languages.map(({ language, fluency }) => (
        <li class="">
          <h3 class="text-neutral-950 font-medium">{language}</h3>
          <div class="text-neutral-500 font-medium text-sm">{fluency}</div>
        </li>
      ))
    }
  </ul>
</Section>
