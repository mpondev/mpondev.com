---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  {
    title: 'Inicio',
    url: '/#top',
  },
  {
    title: 'Proyectos',
    url: '/#proyectos',
  },
  {
    title: 'Sobre m√≠',
    url: '/#sobre-mi',
  },
  {
    title: 'Contacto',
    url: '/#contacto',
  },
  {
    title: 'CV',
    url: '/cv',
    target: '_blank',
  },
];
---

<header
  id="header-nav"
  class="sticky top-0 z-10 mx-auto flex w-auto items-center justify-center gap-x-3 py-5 xl:w-[800px]"
>
  <nav
    class="flex flex-row items-center rounded-lg border border-black bg-black/30 px-2 py-1 backdrop-blur-2xl"
  >
    {
      navItems.map(navItem => (
        <a
          class="rounded-md px-2 text-sm transition hover:bg-neutral-300 dark:hover:bg-white/10 sm:px-3 sm:text-base"
          href={navItem.url}
          target={navItem.target}
        >
          {navItem.title}
        </a>
      ))
    }
  </nav>
  <ThemeToggle />
</header>
