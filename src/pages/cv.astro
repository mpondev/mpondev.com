---
import About from '@/components/cv/About.astro';
import Education from '@/components/cv/Education.astro';
import Experience from '@/components/cv/Experience.astro';
import Hero from '@/components/cv/Hero.astro';
import KeyboardManager from '@/components/cv/KeyboardManager.astro';
import Projects from '@/components/cv/Projects.astro';
import Skills from '@/components/cv/Skills.astro';
---

<main>
  <Hero />
  <About />
  <Experience />
  <Education />
  <Projects />
  <Skills />
</main>

<KeyboardManager />

<style>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      'Courier New',
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  p {
    color: #888;
    font-size: 0.8rem;
    line-height: 1.5;
    text-wrap: pretty;
  }
</style>
